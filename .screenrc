maptimeout 10
escape ^||
altscreen on

term tmux-256color

#terminfo tmux-256color ti=\E[?1049l:te=\E[?1049h
terminfo tmux-256color ti@:te@

#remove some stupid / dangerous key bindings
bind ^k
#make them better
bind \\
bind Q quit
bind ^\ quit
bind K kill
bind I login on
bind O login off
bind } history

