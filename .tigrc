set horizontal-scroll  = 33%
set history-size       = 0
set mouse              = yes
set mouse-scroll       = 10
set mouse-wheel-cursor = no
#
bind generic   +            @sh -c "echo -n %(commit) | myclip"
bind generic   <Down>       move-down
bind generic   <Up>         move-up
bind generic   u            previous
#
# Leader mappings ...
bind diff      \            none
bind diff      \f           :/diff --git
bind diff      \F           :?diff --git
bind diff      \c           :/^@@
bind diff      \C           :?^@@
bind diff      \d           scroll-page-down
bind diff      \1           scroll-page-down
bind diff      \u           scroll-page-up
bind diff      \2           scroll-page-up
bind diff      |            none
bind diff      |!           scroll-page-up
# partial shifts ...
bind diff      \!           scroll-page-up
bind diff      |1           scroll-page-up
#
bind generic   \qq          view-close
#
bind generic   <Ctrl-F>     move-half-page-down
bind generic   <Ctrl-B>     move-half-page-up
#
bind generic   <PageDown>   move-page-down
bind generic   <PageUp>     move-page-up
#
bind generic   <Ctrl-J>     scroll-line-down
bind generic   <Ctrl-K>     scroll-line-up
#
bind generic   <Space>      next
bind generic   <Backspace>  previous
#
bind generic   <Tab>        next
bind generic   <ShiftTab>   previous
#
# <ScrollFwd> == <S-Down>
bind generic   <ScrollFwd>  scroll-line-down
# <ScrollBack> == <S-Up>
bind generic   <ScrollBack> scroll-line-up
#
bind generic   -            none
bind main      C            none
bind reflog    C            none
bind reflog    !            none
bind refs      C            none
bind refs      !            none
bind status    M            none
bind status    C            none
bind status    !            none
bind stage     1            none
bind stage     \            none
bind stage     !            none
bind stash     A            none
bind stash     P            none
bind stash     !            none
