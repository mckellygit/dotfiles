set horizontal-scroll = 33%
set history-size      = 0
bind generic   <Down>       move-down
bind generic   <Up>         move-up
bind diff      u            move-up
bind stage     u            move-up
bind status    u            move-up
bind generic   <Ctrl-F>     move-page-down
bind generic   <Ctrl-B>     move-page-up
bind generic   <Ctrl-J>     scroll-line-down
bind generic   <Ctrl-K>     scroll-line-up
bind generic   <Space>      next
bind generic   <Backspace>  previous
bind generic   <Tab>        next
bind generic   <ShiftTab>   previous
bind main      C            none
bind reflog    C            none
bind reflog    !            none
bind refs      C            none
bind refs      !            none
bind status    M            none
bind status    C            none
bind status    !            none
bind stage     1            none
bind stage     \            none
bind stage     !            none
bind stash     A            none
bind stash     P            none
bind stash     !            none
