#!/bin/bash

cd ~/Downloads
for d in FlameGraph perf-tools xsel CopyQ fd the_silver_searcher tmux byobu vim rtags ccache cgdb kitty alacritty terminator zsh-autosuggestions
do
    echo "checking $d ..."
    cd $d
    rc=$?
    if [[ $rc -eq 0 ]] ; then
        git remote -v
        git pull
        git smu
        cd ..
        echo " --- "
        echo ""
    fi
done

echo "checking ~/.fzf ..."
cd ~/.fzf
rc=$?
if [[ $rc -eq 0 ]] ; then
    git remote -v
    git pull
    git smu
    echo " --- "
    echo ""
fi

cd ~/Downloads/vim_bundles
./update.sh

# ack - curl https://beyondgrep.com/ack-v3.3.1 > ~/bin/ack && chmod 0755 ~/bin/ack
# ag  - silversearcher-ag apt pkg or git clone https://github.com/ggreer/the_silver_searcher.git

echo ""
echo "Also check git:     ack, ag, zsh, rxvt-unicode, CMake ..."
echo "Also check non-git: gcc/g++, clang/clang++/llvm, gdb, readline, ncurses ..."
echo ""
