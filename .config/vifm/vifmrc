qnoremap             <C-b>

qnoremap <Space>       <C-f>

qnoremap \`            <C-u>
qnoremap \1            <C-d>

" <S-BS>
qnoremap <S-BS>        <C-u>
qnoremap <C-^><BS>     <C-u>
qnoremap <C-^>       <C-u>
qnoremap <C-^><C-h>    <C-u>
qnoremap <C-^>       <C-u>
" <S-Space>
qnoremap <C-^><Space>  <C-d>

" <C-BS>
qnoremap <C-^><BS>     k
qnoremap <C-^>       k
" <C-Space>
qnoremap <C-@>         j
" also could be M-- instead of C-@
qnoremap <M-->         j
qnoremap <Esc>-        j
qnoremap -           j

" <C-S-BS>
qnoremap <C-_><BS>     10k
qnoremap <C-_>       10k
" <C-S-Space>
qnoremap <C-_><Space>  10j

" <A-BS>
qnoremap <M-BS>        k
qnoremap <Esc><BS>     k
qnoremap <BS>        k
qnoremap <Esc>       k
qnoremap           k
" <A-Space>
qnoremap <M-Space>     j
qnoremap <Esc><Space>  j
qnoremap <Space>     j

" <A-k>
qnoremap <M-k>         5k
qnoremap <Esc>k        5k
qnoremap k           5k
" <A-j>
qnoremap <M-j>         5j
qnoremap <Esc>j        5j
qnoremap j           5j

" <A-S-k/j> ... <A-K/J>
qnoremap <Esc>K        10k
qnoremap <Esc>J        10j

qnoremap K             5k
qnoremap J             5j

" <C-A-k>
qnoremap <M-C-K>       5k
qnoremap <Esc><C-k>    5k
qnoremap <Esc>       5k
qnoremap <C-k>       5k
qnoremap           5k

" <C-A-j>
qnoremap <M-C-J>       5j
qnoremap <Esc><C-j>    5j
qnoremap <C-j>       5j
" also could be C-o instead of C-j as that is problematic
qnoremap <M-C-O>       5j
qnoremap <Esc><C-o>    5j
qnoremap <Esc>       5j
qnoremap <C-o>       5j
qnoremap           5j

" <A-Return>
qnoremap <M-CR>        k
qnoremap <Esc><CR>     k
qnoremap <CR>        k
qnoremap <C-CR>        j

" <C-S-j/k>
qnoremap <C-_>J        10j
qnoremap <C-_>K        10k

" <C-A-Return>
qnoremap <C-^><CR>     k

qnoremap <C-j>         10j
qnoremap <C-k>         10k

qnoremap g             <nop>
qnoremap gg            1G0

" --------------

" TODO: these do not work correctly ...
"       it needs the keyok(false) for KEY_MAX:2000 fix ...

qnoremap <c-down>      j
qnoremap <esc>[1;5B    j
qnoremap [1;5B       j

qnoremap <c-up>        k
qnoremap <esc>[1;5A    k
qnoremap [1;5A       k

qnoremap <home>        <nop>
qnoremap <c-home>      1G0
qnoremap <esc>[1;5H    1G0
qnoremap [1;5H       1G0

qnoremap <end>         <nop>
qnoremap <c-end>       G0
qnoremap <esc>[1;5F    G0
qnoremap [1;5F       G0

" <A-Down/Up>
qnoremap <esc>[1;3B    10j
qnoremap <esc>[1;3A    10k

