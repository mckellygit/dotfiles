[user]
	name = My Name
	email = My Email Address
[core]
	autocrlf = input
	whitespace = trailing-space,tab-in-indent
	editor = vim
	excludesfile = ~/.gitignore
    preloadindex = true
[apply]
	whitespace = error
[credential]
	helper = cache --timeout=9600
[alias]
	undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
	dt = difftool
	difff = diff
	dif = diff
	last = log -l HEAD
	unstage = reset HEAD --
	visual = !gitk
    merge-s = !git merge --signoff
    merge-signed = !git merge --signoff
    pull-s = !git pull --signoff
    pull-signed = !git pull --signoff
    del-loc-br = "!f() { git branch -D "$@"; }; f"
    del-rem-br = "!f() { git push origin --delete "$@"; }; f"
    del-all-br = "!f() { git push origin --delete "$@"; git branch -D "$@"; }; f"
[diff]
	compactionHeuristic = true
	tool = vimdiff
[difftool]
	prompt = false
	trustExitCode = true
[mergetool]
	trustExitCode = true
